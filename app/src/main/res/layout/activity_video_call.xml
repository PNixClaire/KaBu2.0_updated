<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoCallActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/KaBu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/KaBu_yellow">

            <!-- KaBu (Live2D) fills screen -->
            <com.mobdeve.s13.martin.elaine.kabu20.live2d.Live2DView
                android:id="@+id/live2DView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <FrameLayout
                android:id="@+id/user"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_gravity="top|end"
                android:layout_margin="15dp"
                android:background="@color/KaBu_yellow">

            </FrameLayout>

        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:background="#40272623"
        android:orientation="horizontal">


        <Button
            android:id="@+id/Menu_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@drawable/baseline_menu_30" />

        <Button
            android:id="@+id/Mic_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@drawable/outline_mic_30" />

        <Button
            android:id="@+id/Vid_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/outline_videocam_30" />
    </LinearLayout>

</RelativeLayout>